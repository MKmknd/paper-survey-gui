

PaperSurveyRoot

<PaperSurveyRoot>
    carousel: carousel
    paperlistform: paperlistform
    paperinfo: paperinfo

    BoxLayout:
        orientation: "vertical"
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: "Paper Survey"
                    with_previous: False

                ActionButton:
                    text: "Paper List"

                    on_press: app.root.carousel.load_slide(app.root.paperlistform)

                ActionButton:
                    text: "Paper Info"

                    on_press: app.root.carousel.load_slide(app.root.paperinfo)

        Carousel:
            id: carousel
            PaperListForm:
                id: paperlistform
            PaperInfo:
                id: paperinfo

<MyButton>:
    on_release:
        root.print_data(self.text)

<RV>:
    viewclass: 'MyButton'
    RecycleBoxLayout:
        orientation: 'vertical'
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height


<PaperListForm>
    orientation: "vertical"

    BoxLayout:
        Label:
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            text: "Please select a paper and fill out the information"

        RV:


<PaperInfo>
    BoxLayout:
        orientation: "vertical"

        ##########################
        ## Q1
        ##########################
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Q1. Are any ILAs used?"
                size_hint_x: 0.4

            Spinner:
                id: Q1
                size_hint_x: 0.6
                text: root.Q1_result
                values: "Unknown", "No", "Yes"
                font_size: 40
                #on_text: root.spinner_Q1()


        ##########################
        ## Q2
        ##########################
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Q2. If used, which ILA?"
                size_hint_x: 0.4

            TextInput:
                id: Q2
                text: root.Q2_result
                size_hint_x: 0.6
                font_size: 30
                focus: True
                #on_text_validate: root.buttonClicked_input_1()

        ##########################
        ## Q3
        ##########################
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Q3. What are the metrics?"
                size_hint_x: 0.4

            Spinner:
                id: Q3
                size_hint_x: 0.6
                text: root.Q3_result
                values: "Unknown", "numerical", "text", "other"
                font_size: 40

        ##########################
        ## Q4
        ##########################
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Q4. If other, what is it?"
                size_hint_x: 0.4

            TextInput:
                id: Q4
                text: root.Q4_result
                size_hint_x: 0.6
                font_size: 30
                focus: True


        ##########################
        ## enter data into db
        ##########################
        Button:
            id: enter_db
            size_hint_x: 1
            text: "Enter info to db"
            font_size: 40
            on_press: root.enterInfo()
